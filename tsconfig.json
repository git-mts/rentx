{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    // "lib": [],
    "outDir": "./dist",
    // "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"],
      "@configs/*": ["./configs/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
